        "while_basic": "# Loop WHILE b√°sico\ncontador = 0\nwhile contador < 5:\n    print(f'Contador: {contador}')\n    contador += 1",
        "nested": "# Loops aninhados\nfor i in range(1, 4):\n    for j in range(1, 4):\n        print(f'({i},{j})', end=' ')\n    print()",
        "combined": "# FOR e WHILE combinados\nfor rodada in range(1, 4):\n    print(f'Rodada {rodada}:')\n    tentativas = 0\n    while tentativas < 3:\n        print(f'  Tentativa {tentativas + 1}')\n        tentativas += 1"
    }
    
    # =========================================================================
    # FUN√á√ïES AUXILIARES
    # =========================================================================
    
    def safe_eval_condition(value, operator, limit):
        """Avalia condi√ß√µes do WHILE de forma segura"""
        operator = {
            "<": lambda x, y: x < y,
            "<=": lambda x, y: x <= y,
            ">": lambda x, y: x > y,
            ">=": lambda x, y: x >= y,
            "==": lambda x, y: x == y,
            "!=": lambda x, y: x != y
        }
        return operator.get(operator, lambda x, y: False)(value, limit)
    
    def safe_execute_code(code):
        """Executa c√≥digo Python de forma segura capturando a sa√≠da"""
        try:
            output_buffer = io.StringIO()
            with redirect_stdout(output_buffer):
                exec(code, {"random": random, "range": range, "print": print})
            return output_buffer.getvalue()
        except Exception as e:
            return f"‚ùå Erro na execu√ß√£o:\n{str(e)}"
        except ValueError as e:
          result.append(ui.div(f"‚ùå Valor inv√°lido: {str(e)}", style="color: #dc3545;"))
        except ZeroDivisionError as e:
          result.append(ui.div(f"‚ùå Divis√£o por zero: {str(e)}", style="color: #dc3545;"))
        except Exception as e:
          result.append(ui.div(f"‚ùå Erro inesperado: {str(e)}", style="color: #dc3545;"))
            
    def validate_inputs(initial, limit, condition):
      if not isinstance(initial, int) or not isinstance(limit, int):
        raise ValueError("Valores devem ser n√∫meros inteiros")
      if condition not in ['<', '<=', '>', '>=', '==', '!=']:
        raise ValueError("Operador de condi√ß√£o inv√°lido")
            

    
