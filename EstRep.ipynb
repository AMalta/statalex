    @reactive.event(input.build_for)
    def handle_for_anatomy():
        """Constr√≥i e executa o loop FOR"""
        var = input.for_variable()
        start = input.for_start()
        end = input.for_end()
        step = input.for_step()
        action = input.for_action()
        custom = input.for_custom_action()
        
        @output
